@using System.Web;
@model JobDetailesViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <section class="py-3 card mb-3">
        <div class="container">
            <div class="row mb-2">
                <img class="mb-3" src="~/images/Jobs/@Model.Image" style="width:100%; height:400px" />
                <h2 style="text-align:center">@Model.Title</h2>
            </div>
            <div class="row container mb-2">
                <p>@Html.Raw(Model.Description)</p>
            </div>
            <hr />
            <div class="row mb-2">
                <div class="row">
                    <dt class="col-3">Company Name</dt>
                    <dd class="col-9"><i>@Html.DisplayFor(model => model.CompanyName)</i> </dd>

                    <dt class="col-3">Category</dt>
                    <dd class="col-9"> <i>@Html.DisplayFor(model => model.Category)</i></dd>

                    <dt class="col-3">Publisher</dt>
                    <dd class="col-9"> <i>@Html.DisplayFor(model => model.User)</i></dd>

                    <dt class="col-3">Date</dt>
                    <dd class="col-9"> <i>@Html.DisplayFor(model => model.AddedOn)</i></dd>
                </div>
            </div>
        </div>
    </section>
</div>
